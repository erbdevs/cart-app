<h1>Products</h1>
<hr>
<% @products.each do |product|%>
  <h2><%= product.name %></h2>
  <p>Code: <%= product.code%> </p>
  <p>Price: <%= product.price%> </p>
  <%= form_with model: @cart_item do |f| %>
    <%= f.hidden_field :product_id, value: product.id %>
    <%= f.number_field :quantity, value: 1, min: 1 %>
    <%= f.submit "Add to Cart" %>
  <% end %>
<% end %>
